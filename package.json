{
  "name": "discordbotmaker",
  "version": "0.1.2",
  "main": "./index.js",
  "author": "Ty Kutcher",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder",
    "package": "electron-packager . \"Discord Bot Maker\" --platform=win32 --arch=x64 --out=build/ --overwrite"
  },
  "build": {
    "appId": "me.bot.maker",
    "productName": "Discord Bot Maker",
    "directories": {
      "output": "dist/installers"
    },
    "extraFiles": [
      {
        "from": "./dist/themes",
        "to": "./dist/themes"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "./dist/images/icon.ico",
      "fileAssociations": [
        {
          "ext": "dbm",
          "name": "Discord Bot Maker",
          "description": "Make custom discord bots!"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "license": "license.md"
    }
  },
  "keywords": [],
  "license": "MIT",
  "description": "",
  "dependencies": {
    "discord.js": "^14.0.3"
  },
  "devDependencies": {
    "electron": "25.2.0"
  }
}